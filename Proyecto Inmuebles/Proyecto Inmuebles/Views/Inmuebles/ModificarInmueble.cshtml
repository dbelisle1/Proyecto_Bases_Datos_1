@model Proyecto_Inmuebles.Models.InmueblesVerViewModel
@{
    ViewData["Title"] = "Modificar Inmueble";
}

<h2>@ViewData["Title"]</h2>
<p style="margin-top:12px;">

    <form asp-controller="Inmuebles" asp-action="ModificarInmuebleAccion" method="post" style="display:grid; gap:8px; max-width:280px;">

        <label>Id</label>
        <input asp-for="IdInmueble" hidden />
        <input value="@Model.IdInmueble" disabled />


        <label for="IdVendedor">IdVendedor:</label>
        <select id="IdVendedor" name="IdVendedor" class="form-control" disabled>
            @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.listaVendedores)
            {
                if (item.Value == Model.IdVendedor.ToString())
                {
                    <option value="@item.Value" selected>
                        @item.Text

                    </option>
                }
                else
                {
                    <option value="@item.Value">
                        @item.Text

                    </option>
                }

            }
        </select>


        <label for="IdTipoInmueble">IdTipoInmueble:</label>
        <select id="IdTipoInmueble" name="IdTipoInmueble" class="form-control">
