            {
                if (item.Value == Model.IdCondicion2.ToString())
                {
                    <option value="@item.Value" selected>
                        @item.Text

                    </option>
                }
                else
                {
                    <option value="@item.Value">
                        @item.Text

                    </option>
                }

            }
        </select>

        <label for="IdCondicion3">IdCondicion3:</label>
        <select id="IdCondicion3" name="IdCondicion3" class="form-control">
            @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.listaCondiciones)
            {
                if (item.Value == Model.IdCondicion3.ToString())
                {
                    <option value="@item.Value" selected>
                        @item.Text

