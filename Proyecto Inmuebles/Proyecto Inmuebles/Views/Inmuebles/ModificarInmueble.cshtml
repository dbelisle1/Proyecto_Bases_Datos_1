            {
                if (item.Value == Model.IdTipoInmueble.ToString())
                {
                    <option value="@item.Value" selected>
                        @item.Text

                    </option>
                }
                else
                {
                    <option value="@item.Value">
                        @item.Text

                    </option>
                }

            }
        </select>

        <label>Direccion</label>
        <input asp-for="Direccion" autocomplete="Direccion" />

        <label>Precio</label>
        <input asp-for="Precio" autocomplete="Precio" />

        <label>Precio</label>
        <input asp-for="Precio" autocomplete="Precio" />
        <label>Metraje</label>
        <input asp-for="Metraje" autocomplete="Metraje" />
        <label>AntiguedadAnos</label>
        <input asp-for="AntiguedadAnos" autocomplete="AntiguedadAnos" />
        <label>Modelo</label>
        <input asp-for="Modelo" autocomplete="Modelo" />
        <label>Material</label>
        <input asp-for="Material" autocomplete="Material" />
        <label>Descripcion</label>
        <input asp-for="Descripcion" autocomplete="Descripcion" />

