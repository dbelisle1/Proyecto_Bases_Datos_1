@model Proyecto_Inmuebles.Models.InmueblesViewModel
@{
    ViewData["Title"] = "Inmuebles";
}

<h2>@ViewData["Title"]</h2>
<a asp-controller="Inmuebles" asp-action="CrearInmueble" class="btn btn-outline-info">@("Crear +")</a>
<p style="margin-top:12px;">
    <div style="display:grid; gap:8px; max-width:700px;">

        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>IdInmueble</th>
                    <th>IdVendedor</th>
                    <th>IdTipoInmueble</th>
                    <th>Direccion</th>
                    <th>Precio</th>
                    <th>Metraje</th>
                    <th>AntiguedadAnos</th>
                    <th>Modelo</th>
                    <th>Material</th>
                    <th>Descripcion</th>
                    <th class="text-center" style="width: 700px;">Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model.InmueblesList)
                {
                <tr>
                        <td>@item.IdInmueble</td>
                        <td>
                            @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaVendedores)
                            {
                                if (it.Value == item.IdVendedor.ToString())
                                {
                                    <span>@it.Text</span>
                                    break;
                                }
                            }

                        </td>
                        <td>

                            @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaTipos)
                            {
                                if (it.Value == item.IdTipoInmueble.ToString())
                                {
                                    <span>@it.Text</span>
                                    break;
                                }
                            }

                        </td>

                        <td>@item.Direccion</td>
                        <td>@item.Precio</td>
                        <td>@item.Metraje</td>
                        <td>@item.AntiguedadAnos</td>
                        <td>@item.Modelo</td>
                        <td>@item.Material</td>
                        <td>@item.Descripcion</td>
                    <td class="text-center" style="display: flex; justify-content: space-around;">
                        <a asp-controller="Inmuebles"
                           asp-action="VerInmueble"
                               asp-route-IdInmueble="@item.IdInmueble"
                           class="btn btn-sm btn-outline-primary me-1">
                            Ver
                        </a>

                        <a asp-controller="Inmuebles"
                           asp-action="ModificarInmueble"
                               asp-route-IdInmueble="@item.IdInmueble"
                           class="btn btn-sm btn-outline-secondary me-1">
                            Modificar
                        </a>

                        <form asp-controller="Inmuebles"
                              asp-action="EliminarInmueble"
                                  asp-route-IdInmueble="@item.IdInmueble"
                              method="post"
                              class="d-inline">
                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('¿Eliminar este Inmueble?');">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        
    </div>
</p>

<a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>