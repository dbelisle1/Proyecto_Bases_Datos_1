@model Proyecto_Inmuebles.Models.VentasViewModel
@{
    ViewData["Title"] = "Ventas por Agente";
    var rows = Model?.VentasFiltroList ?? new List<Proyecto_Inmuebles.Models.VentaFiltro>();
}

<h2>@ViewData["Title"]</h2>

<div class="mt-3" style="max-width:700px;">
    <table class="table table-striped table-bordered table-sm">
        <thead>

           
            <tr class="text-center">
                <th>IdVenta</th>
                <th>FechaCierre</th>
                <th>PrecioFinal</th>
                <th>IdInmueble</th>
                <th>Direccion</th>
                <th>IdTipoInmueble</th>
                <th>IdVendedor</th>
                <th>IdComprador</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (!rows.Any())
            {
                <tr>
                    <td colspan="8" class="text-muted">Sin datos</td>
                </tr>
            }
            else
            {
                foreach (var item in rows)
                {
                    <tr>
                        <td>@item.IdVenta</td>
                        <td>@(item.FechaCierre ?? "—")</td>
                        <td>@item.PrecioFinal</td>
                        <td>
                            @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaInmuebles)
                            {
                                if (it.Value == item.IdInmueble.ToString())
                                {
                                    <span>@it.Text</span>
                                    break;
                                }



                            }
                            
                            </td>
                        <td>@item.Direccion</td>
                        <td>
                            @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaTipos)
                            {
                                if (it.Value == item.IdTipoInmueble.ToString())
                                {
                                    <span>@it.Text</span>
                                    break;
                                }



                            }

                        </td>
                        <td>
                            @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaVendedores)
                            {
                                if (it.Value == item.IdVendedor.ToString())
                                {
                                    <span>@it.Text</span>
                                    break;
                                }



                            }

                        </td>
                        <td>
                            @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaCompradores)
                            {
                                if (it.Value == item.IdComprador.ToString())
                                {
                                    <span>@it.Text</span>
                                    break;
                                }



                            }

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a asp-controller="Ventas" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>