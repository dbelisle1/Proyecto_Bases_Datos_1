@model Proyecto_Inmuebles.Models.TipoUsuarioViewModel
@{
    ViewData["Title"] = "Tipos de Usuario";
}

<h2>@ViewData["Title"]</h2>
<p style="margin-top:12px;">
    <div style="display:grid; gap:8px; max-width:700px;">

        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>IdTipoUsuario</th>
                    <th>NombreTipo</th>
                    <th class="text-center" style="width: 700px;">Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model.tiposUsuario)
                {
                <tr>
                    <td>@item.IdTipoUsuario</td>
                    <td>@item.NombreTipo</td>
                    <td class="text-center" style="display: flex; justify-content: space-around;">
                        <a asp-controller="TipoUsuario"
                           asp-action="VerTipoUsuario"
                               asp-route-IdTipoUsuario="@item.IdTipoUsuario"
                           class="btn btn-sm btn-outline-primary me-1">
                            Ver
                        </a>

                        <a asp-controller="TipoUsuario"
                           asp-action="ModificarTipoUsuario"
                               asp-route-IdTipoUsuario="@item.IdTipoUsuario"
                           class="btn btn-sm btn-outline-secondary me-1">
                            Modificar
                        </a>

                        <form asp-controller="TipoUsuario"
                              asp-action="EliminarTipoUsuario"
                                  asp-route-IdTipoUsuario="@item.IdTipoUsuario"
                              method="post"
                              class="d-inline">
                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('¿Eliminar este TipoUsuario?');">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        
    </div>
</p>

<a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>