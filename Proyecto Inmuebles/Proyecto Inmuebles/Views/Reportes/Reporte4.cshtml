@model Proyecto_Inmuebles.Models.ReportesViewModel
@{
    ViewData["Title"] = "Resumen por vendedor";
    var rows = Model?.Reporte4 ?? new List<Proyecto_Inmuebles.Models.ResumenPorVendedor>();
}

<h2>@ViewData["Title"]</h2>

<div class="mt-3" style="max-width:900px;">
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr class="text-center">
                <th>Id Vendedor</th>
                <th>Vendedor</th>
                <th>Inmuebles listados</th>
                <th>Inmuebles vendidos</th>
                <th>Ingresos</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (!rows.Any())
            {
                <tr><td colspan="5" class="text-muted">Sin datos</td></tr>
            }
            else
            {
                foreach (var item in rows)
                {
                    <tr>
                        <td>@item.IdVendedor</td>
                        <td>@item.Vendedor</td>
                        <td>@item.InmueblesListados</td>
                        <td>@item.InmueblesVendidos</td>
                        <td>@item.Ingresos</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>
