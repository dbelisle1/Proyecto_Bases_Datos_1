@model Proyecto_Inmuebles.Models.ReportesViewModel
@{
    ViewData["Title"] = "Inmuebles por vendedor y tipo";
    var rows = Model?.Reporte2 ?? new List<Proyecto_Inmuebles.Models.InmueblesPorVendedorYTipo>();
}

<h2>@ViewData["Title"]</h2>

<div class="mt-3" style="max-width:900px;">
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr class="text-center">
                <th>Id Vendedor</th>
                <th>Vendedor</th>
                <th>Tipo</th>
                <th>Inmuebles</th>
                <th>Precio Total de Inmuebles</th>
                <th>Precio promedio</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (!rows.Any())
            {
                <tr><td colspan="6" class="text-muted">Sin datos</td></tr>
            }
            else
            {
                foreach (var item in rows)
                {
                    <tr>
                        <td>@item.IdVendedor</td>
                        <td>@item.Vendedor</td>
                        <td>@item.NombreTipo</td>
                        <td>@item.Inmuebles</td>
                        <td>@item.TotalListado</td>
                        <td>@item.PrecioProm</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>
