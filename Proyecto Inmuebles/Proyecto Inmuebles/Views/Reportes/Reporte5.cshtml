@model Proyecto_Inmuebles.Models.ReportesViewModel
@{
    ViewData["Title"] = "Ventas por agente y forma de pago";
    var rows = Model?.Reporte5 ?? new List<Proyecto_Inmuebles.Models.VentasPorAgenteFormaPago>();
}

<h2>@ViewData["Title"]</h2>

<div class="mt-3" style="max-width:1000px;">
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr class="text-center">
                <th>Código</th>
                <th>Agente</th>
                <th>Forma de pago</th>
                <th>Ventas</th>
                <th>Ingresos</th>
                <th>Ticket prom.</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (!rows.Any())
            {
                <tr><td colspan="6" class="text-muted">Sin datos</td></tr>
            }
            else
            {
                foreach (var item in rows)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Agente</td>
                        <td>@(item.NombreFormaPago ?? "—")</td>
                        <td>@item.Ventas</td>
                        <td>@item.Ingresos</td>
                        <td>@item.TicketProm</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>
