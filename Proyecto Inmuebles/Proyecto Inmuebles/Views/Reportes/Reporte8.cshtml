@model Proyecto_Inmuebles.Models.ReportesViewModel
@{
    ViewData["Title"] = "Resultados por agente (All Time)";
    var rows = Model?.Reporte8 ?? new List<Proyecto_Inmuebles.Models.ResultadosPorAgenteAllTime>();
}

<h2>@ViewData["Title"]</h2>

<div class="mt-3" style="max-width:900px;">
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr class="text-center">
                <th>Código</th>
                <th>Publicaciones</th>
                <th>Ventas</th>
                <th>Ingresos</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (!rows.Any())
            {
                <tr><td colspan="4" class="text-muted">Sin datos</td></tr>
            }
            else
            {
                foreach (var item in rows)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Publicaciones</td>
                        <td>@item.Ventas</td>
                        <td>@item.Ingresos</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>
