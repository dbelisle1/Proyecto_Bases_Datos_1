@model Proyecto_Inmuebles.Models.ReportesViewModel
@{
    ViewData["Title"] = "Tasa de aceptación de ofertas por agente";
    var rows = Model?.Reporte6 ?? new List<Proyecto_Inmuebles.Models.TasaAceptacionPorAgente>();
}

<h2>@ViewData["Title"]</h2>

<div class="mt-3" style="max-width:800px;">
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr class="text-center">
                <th>Código</th>
                <th>Aceptadas</th>
                <th>Total</th>
                <th>% Aceptación</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (!rows.Any())
            {
                <tr><td colspan="4" class="text-muted">Sin datos</td></tr>
            }
            else
            {
                foreach (var item in rows)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Aceptadas</td>
                        <td>@item.Total</td>
                        <td>@item.PctAceptacion</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>
