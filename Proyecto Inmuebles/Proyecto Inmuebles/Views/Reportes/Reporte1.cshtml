@model Proyecto_Inmuebles.Models.ReportesViewModel
@{
    ViewData["Title"] = "Formas de pago usadas por un comprador en sus ventas";
    var rows = Model?.Reporte1 ?? new List<Proyecto_Inmuebles.Models.FormasPagoUsadasPorComprador>();
}

<h2>@ViewData["Title"]</h2>

<div class="mt-3" style="max-width:700px;">
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr class="text-center">
                <th>Comprador</th>
                <th>Forma de pago</th>
                <th>Veces</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (!rows.Any())
            {
                <tr>
                    <td colspan="3" class="text-muted">Sin datos</td>
                </tr>
            }
            else
            {
                foreach (var item in rows)
                {
                    <tr>
                        <td>@item.Comprador</td>
                        <td>@(item.NombreFormaPago ?? "—")</td>
                        <td>@item.Veces</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>