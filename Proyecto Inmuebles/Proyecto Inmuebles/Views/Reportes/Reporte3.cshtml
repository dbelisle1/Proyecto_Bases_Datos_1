@model Proyecto_Inmuebles.Models.ReportesViewModel
@{
    ViewData["Title"] = "Top interés por inmueble";
    var rows = Model?.Reporte3 ?? new List<Proyecto_Inmuebles.Models.TopInteresPorInmueble>();
}

<h2>@ViewData["Title"]</h2>

<div class="mt-3" style="max-width:800px;">
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr class="text-center">
                <th>Id Inmueble</th>
                <th>Dirección</th>
                <th>Ofertas</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (!rows.Any())
            {
                <tr><td colspan="3" class="text-muted">Sin datos</td></tr>
            }
            else
            {
                foreach (var item in rows)
                {
                    <tr>
                        <td>@item.IdInmueble</td>
                        <td>@item.Direccion</td>
                        <td>@item.Ofertas</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a asp-controller="Reportes" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>
