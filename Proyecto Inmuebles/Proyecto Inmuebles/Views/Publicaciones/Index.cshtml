@model Proyecto_Inmuebles.Models.PublicacionesViewModel
@{
    ViewData["Title"] = "Publicaciones";
    var rows = Model?.PublicacionesFiltroList ?? new List<Proyecto_Inmuebles.Models.PublicacionPorCondicion>();
}

<h2>@ViewData["Title"]</h2>
<p style="margin-top:12px;">
    <div style="display:grid; gap:8px; max-width:1200px;">
        <form asp-controller="Publicaciones" asp-action="FiltrarPublicacionesAccion" method="post" class="border rounded p-3">
            <h5 class="mb-3">Publicaciones por Condicion</h5>
            <div class="row g-2 align-items-end">
                <div class="col-sm-2">
                    <label for="IdCondicionFiltro" class="form-label">IdCondicionFiltro</label>

                    <select id="IdCondicionFiltro" name="IdCondicionFiltro" class="form-control">
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.listaCondiciones)
                        {
                            <option value="@item.Value">
                                @item.Text

                            </option>
                        }
                    </select>


                </div>
                <div class="col-sm-2">
                    <label for="IdTipoInmuebleFiltro" class="form-label">IdTipoInmuebleFiltro</label>

                    <select id="IdTipoInmuebleFiltro" name="IdTipoInmuebleFiltro" class="form-control">
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.listaTipos)
                        {
                            <option value="@item.Value">
                                @item.Text

                            </option>
                        }
                    </select>
                </div>
                <div class="col-sm-2">
                    <label for="PrecioMinFiltro" class="form-label">PrecioMinFiltro</label>
                    <input asp-for="PrecioMinFiltro" />
                </div>
               

                <div class="col-sm-2">
                    <label for="PrecioMaxFiltro" class="form-label">PrecioMaxFiltro</label>
                    <input asp-for="PrecioMaxFiltro" />
                </div>

                <div class="col-sm-2">
                    <label for="DireccionFiltro" class="form-label">DireccionFiltro</label>
                    <input asp-for="DireccionFiltro" />
                </div>

                

                <div class="col-sm-2">
                    <button type="submit" class="btn btn-sm btn-primary w-100">Buscar</button>
                </div>
            </div>
        </form>


        <table class="table table-striped table-bordered table-sm">
            <thead>


                <tr class="text-center">
                    <th>IdPublicacion </th>
                    <th>FechaPublicacion</th>
                    <th>IdInmueble </th>
                    <th>Direccion </th>
                    <th>Precio </th>
                    <th>IdTipoInmueble </th>
                    <th>IdVendedor</th>
                    <th>IdAgente</th>
                    @if (Model.IdTipoUsuario == 3)
                    {
                        <th class="text-center" >Acciones</th>
                    }
                </tr>
            </thead>
            <tbody class="text-center">
                @if (!rows.Any())
                {
                    <tr>
                        <td colspan="8" class="text-muted">Sin datos</td>
                    </tr>
                }
                else
                {
                    foreach (var item in rows)
                    {
                        <tr>
                            <td>@item.IdPublicacion</td>
                            <td>@(item.FechaPublicacion ?? "—")</td>
                            <td>
                                @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaInmuebles)
                                {
                                    if (it.Value == item.IdInmueble.ToString())
                                    {
                                        <span>@it.Text</span>
                                        break;
                                    }



                                }

                            </td>
                            <td>@item.Direccion</td>
                            <td>@item.Precio</td>
                            <td>
                                @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaTipos)
                                {
                                    if (it.Value == item.IdTipoInmueble.ToString())
                                    {
                                        <span>@it.Text</span>
                                        break;
                                    }



                                }

                            </td>
                            <td>
                                @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaVendedores)
                                {
                                    if (it.Value == item.IdVendedor.ToString())
                                    {
                                        <span>@it.Text</span>
                                        break;
                                    }



                                }

                            </td>
                            <td>
                                @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaAgentes)
                                {
                                    if (it.Value == item.IdAgente.ToString())
                                    {
                                        <span>@it.Text</span>
                                        break;
                                    }



                                }

                            </td>

                            @if (Model.IdTipoUsuario == 3)
                            {
                                <td>
                                    <a asp-controller="Ofertas"
                                       asp-action="CrearOferta"
                                       asp-route-IdPublicacion="@item.IdPublicacion"
                                       class="btn btn-sm btn-outline-secondary me-1">
                                        Ofertar
                                    </a>
                                </td>

                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
        
    </div>
</p>

<a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>