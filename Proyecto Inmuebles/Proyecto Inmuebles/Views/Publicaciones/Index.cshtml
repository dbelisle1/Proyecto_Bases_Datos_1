@model Proyecto_Inmuebles.Models.PublicacionesViewModel
@{
    ViewData["Title"] = "Publicaciones";
}

<h2>@ViewData["Title"]</h2>
<p style="margin-top:12px;">
    <div style="display:grid; gap:8px; max-width:700px;">
        <form asp-controller="Publicaciones" asp-action="FiltrarPublicacionesAccion" method="post" class="border rounded p-3">
            <h5 class="mb-3">Publicaciones por Condicion</h5>
            <div class="row g-2 align-items-end">
                <div class="col-sm-4">
                    <label for="IdCondicionFiltro" class="form-label">IdComprador</label>

                    <select id="IdCondicionFiltro" name="IdCondicionFiltro" class="form-control">
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.listaCondiciones)
                        {
                            <option value="@item.Value">
                                @item.Text

                            </option>
                        }
                    </select>
                </div>
                <div class="col-sm-3">
                    <button type="submit" class="btn btn-sm btn-primary w-100">Buscar</button>
                </div>
            </div>
        </form>


        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>IdPublicacion</th>
                    <th>IdInmueble</th>
                    <th>IdAgente</th>
                    <th>FechaPublicacion</th>
                    @if (Model.IdTipoUsuario == 3)
                    {
                        <th class="text-center" style="width: 700px;">Acciones</th>
                    }
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model.PublicacionesList)
                {
                <tr>
                        <td>@item.IdPublicacion</td>
                        <td>
                            @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaInmuebles)
                            {
                                if (it.Value == item.IdInmueble.ToString())
                                {
                                    <span>@it.Text</span>
                                    break;
                                }



                            }
                        </td>
                        <td>
                            @foreach (var it in (IEnumerable<SelectListItem>)ViewBag.listaAgentes)
                            {
                                if (it.Value == item.IdAgente.ToString())
                                {
                                    <span>@it.Text</span>
                                    break;
                                }



                            }
                        </td>
                        <td>@item.FechaPublicacion</td>
                        @if (Model.IdTipoUsuario == 3)
                        {
                            <td>
                                <a asp-controller="Ofertas"
                                   asp-action="CrearOferta"
                                   asp-route-IdPublicacion="@item.IdPublicacion"
                                   class="btn btn-sm btn-outline-secondary me-1">
                                    Ofertar
                                </a>
                            </td>
                          
                        }
                </tr>
                }
            </tbody>
        </table>
        
    </div>
</p>

<a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>