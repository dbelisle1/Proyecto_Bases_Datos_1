@model Proyecto_Inmuebles.Models.EstadoOfertaViewModel
@{
    ViewData["Title"] = "Estado de Oferta";
}

<h2>@ViewData["Title"]</h2>
<a asp-controller="EstadoOferta" asp-action="CrearEstadoOferta" class="btn btn-outline-info">@("Crear +")</a>
<p style="margin-top:12px;">
    <div style="display:grid; gap:8px; max-width:700px;">

        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>IdEstadoOferta</th>
                    <th>NombreEstadoOferta</th>
                    <th class="text-center" style="width: 700px;">Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model.estadoOfertaList)
                {
                <tr>
                        <td>@item.IdEstadoOferta</td>
                    <td>@item.NombreEstado</td>
                    <td class="text-center" style="display: flex; justify-content: space-around;">
                        <a asp-controller="EstadoOferta"
                           asp-action="VerEstadoOferta"
                               asp-route-IdEstadoOferta="@item.IdEstadoOferta"
                           class="btn btn-sm btn-outline-primary me-1">
                            Ver
                        </a>

                        <a asp-controller="EstadoOferta"
                           asp-action="ModificarEstadoOferta"
                               asp-route-IdEstadoOferta="@item.IdEstadoOferta"
                           class="btn btn-sm btn-outline-secondary me-1">
                            Modificar
                        </a>

                        <form asp-controller="EstadoOferta"
                              asp-action="EliminarEstadoOferta"
                                  asp-route-IdEstadoOferta="@item.IdEstadoOferta"
                              method="post"
                              class="d-inline">
                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('¿Eliminar este Estado de Oferta?');">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        
    </div>
</p>

<a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">@("<- Regresar")</a>